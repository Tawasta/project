<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>
         <!-- Note form view -->
        <record id="project_project_note_form" model="ir.ui.view">
            <field name="name">project.project.note.form</field>
            <field name="model">project.project.note</field>
            <field name="arch" type="xml">
                <form string='Project notes'>
                    <group>
                       <field name='name' />
                        <field name='note' />
                        <field name='create_date' readonly='1' />
                        <field name='create_uid' readonly='1' />
                    </group>
                </form>
            </field>
        </record>
    
        <!-- Note tree view -->
        <record id="project_project_note_tree" model="ir.ui.view">
            <field name="name">project.project.note.tree</field>
            <field name="model">project.project.note</field>
            <field name="arch" type="xml">
                <tree string='Project notes' editable="top/bottom">
                    <field name='name' />
                    <field name='note' />
                    <field name='create_date' readonly='1' />
                    <field name='create_uid' readonly='1' />
                </tree>
            </field>
        </record>
        
    </data>
</openerp>