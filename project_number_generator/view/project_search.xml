<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <!-- Filters view -->
        <record id="project.view_project_extended_filter" model="ir.ui.view">
            <field name="name">project.project.extended.filter</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project_project_filter"/>
            <field name="arch" type="xml">
                <field name='name' position='replace'>
                    <field name="name" string="Project" filter_domain="['|', ('name','ilike',self), ('project_number', 'ilike', self)]" help="Project name or number"/>
                </field>
            </field>
        </record>
    </data>
</openerp>