<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<record id="view_task_project_user_search_inherit" model="ir.ui.view">
			<field name="name">report.project.task.user.search.inherit</field>
			<field name="model">report.project.task.user</field>
			<field name="inherit_id" ref="project.view_task_project_user_search" />
			<field name="arch" type="xml">

				<field name="stage_id" position="after">
					<field name="task_type"/>
					<field name="hour_type"/>
					<field name="skills"/>
				</field>

				<filter string="Assignation Month" position="after">
					<filter name="Partner" string="Partner" context="{'group_by':'partner_id'}"/>
					<filter name="company" string="Company" context="{'group_by':'company_id'}"/>
				</filter>

				<group string="Group By" position="after">
					<group expand="2" string="Task Types">
						<filter name="task_types" string="Task Types" context="{'col_group_by':'task_type'}"/>
						<filter name="hour_types" string="Hour Types" context="{'col_group_by':'hour_type'}"/>
						<filter name="skills" string="Skills" context="{'col_group_by':'skills'}"/>
					</group>
				</group>

			</field>
		</record> 

	</data>
</openerp>