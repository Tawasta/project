<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

        <!-- Projects' form view modifications-->
        <record id="edit_project_inherit" model="ir.ui.view">
            <field name="name">project.project.form.inherit</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
            	<field name='name' position='after'>
            		<field name="priority" widget="priority"/>
            	</field>

            	<field name="user_id" position="before">
            		<field name="project_type" widget="many2many_tags"/>
            		<newline/>
            	</field>

            	<field name='planned_hours' position='replace'>
            		<field name="real_planned" widget="float_time"/>
            		<field name="accuracy" widget="float_time" />
            	</field>
            	<field name="effective_hours" position="replace">
            		<field name="real_effective" widget="float_time"/>
            	</field>
            </field>
        </record>
	</data>
</openerp>