<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	<!-- Kanban view -->
       	<record id="project_kanban_project_number" model="ir.ui.view">
            <field name="name">project.kanban.project_number</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project_kanban"/>
            <field name="arch" type="xml">
				
				<xpath expr="//field[@name='name']" position='after'>
					<field name='project_number' />
				</xpath>
				
				<xpath expr="//templates/t/div/div[2]/h4" position='before'>
					<p style="margin-top: 0; font-size: 0.9em;"><strong>#<field name='project_number'/></strong></p>
				</xpath>

            </field>
      	</record>
    </data>
</openerp>