<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	<!-- Kanban view -->
       	<record id="project_task_kanban_task_number" model="ir.ui.view">
            <field name="name">project.task.kanban.project_number</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_kanban"/>
            <field name="arch" type="xml">
				
				<xpath expr="//field[@name='name']" position='after'>
					<field name='task_number' />
				</xpath>
				
				<xpath expr="//templates/t/div/div[2]/div[1]/b" position='before'>
					<p style="margin-top: 0; font-size: 0.9em;"><strong>#<field name='task_number'/></strong></p>
				</xpath>

            </field>
      	</record>
    </data>
</openerp>